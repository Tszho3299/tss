<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.doysoft.app.radio"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="com.doysoft.q_radio.Radioplayer" >
        </service>

        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.doysoft.q_radio.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.RadioUi"
            android:label="@string/title_activity_radio_ui"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Rcoradio"
            android:label="@string/title_activity_rcoradio">
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Cateradio"
            android:label="@string/title_activity_cateradio" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Moreradio"
            android:label="@string/title_activity_moreradio" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.MusicUi"
            android:label="@string/title_activity_music_ui"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Rcomradio"
            android:label="@string/title_activity_rcomradio" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Detail"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name="com.doysoft.q_radio.Getdataphp"
            android:label="@string/title_activity_getdataphp" >
        </activity>
    </application>

</manifest>